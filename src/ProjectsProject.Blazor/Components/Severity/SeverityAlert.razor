@using ProjectsProject.Common
@using Severity=ProjectsProject.Enums.Severity
@namespace ProjectsProject.Blazor.Components
@inherits ProjectsProjectComponentBase

@{
    var text = string.IsNullOrEmpty(Text) ? L[$"Enum:Severity:{(int)Severity}"] : Text;
}

<MudAlert Severity="@Severity.ToMudSeverity()" Variant="Variant.Text" Dense="@Dense"
          Style="@Style">
    @text
</MudAlert>

@code {
    [Parameter]
    public string? Text { get; set; }
    
    [Parameter] [EditorRequired]
    public Severity Severity { get; set; }
    
    [Parameter]
    public bool Dense { get; set; }
    
    [Parameter]
    public string? Style { get; set; }
}
